{
  "title": "Climatogramme data",
  "type": "object",
  "format": "grid",
  "properties": {
    "primaryTitle": {
      "propertyOrder": 10,
      "type": "string",
      "minLength": 4,
      "default": "",
      "options": {
        "grid_columns": 12
      }
    },
    "fontSizeSummary": {
      "propertyOrder": 15,
      "title": "Size summary (px)",
      "type": "number",
      "default": 12,
      "minimum": 5,
      "maximum": 50,
      "options": {
        "grid_columns": 4
      }
    },
    "fontFamily": {
      "propertyOrder": 15,
      "title": "Font summary (font family)",
      "type": "select",
      "enum": ["sans-serif", "serif"],
      "default": "sans-serif",
      "reguired": true,
      "options": {
        "grid_columns": 4
      }
    },
    "summaryMargin": {
      "propertyOrder": 15,
      "title": "Summary margin",
      "type": "integer",
      "default": 0,
      "options": {
        "grid_columns": 4
      }
    },
    "fontSizeXAxis": {
      "propertyOrder": 16,
      "title": "Size X axis (px)",
      "type": "number",
      "default": 10,
      "minimum": 5,
      "maximum": 50,
      "options": {
        "grid_columns": 4
      }
    },
    "fontSizeYAxis": {
      "propertyOrder": 16,
      "title": "Size Y axis (px)",
      "type": "number",
      "default": 10,
      "minimum": 5,
      "maximum": 50,
      "options": {
        "grid_columns": 4
      }
    },
    "numberTicks": {
      "propertyOrder": 17,
      "title": "Number y ticks",
      "type": "number",
      "default": 10,
      "minimum": 5,
      "maximum": 50,
      "options": {
        "grid_columns": 4
      }
    },
    "width": {
      "propertyOrder": 20,
      "type": "integer",
      "default": 500,
      "minimum": 200,
      "maximum": 2000,
      "options": {
        "grid_columns": 3
      }
    },
    "height": {
      "propertyOrder": 30,
      "type": "integer",
      "default": 800,
      "minimum": 400,
      "maximum": 2000,
      "options": {
        "grid_columns": 3
      }
    },
    "xAxisMargin": {
      "propertyOrder": 31,
      "title": "X axis text margin (px)",
      "type": "integer",
      "default": 10,
      "minimum": 0,
      "maximum": 20,
      "options": {
        "grid_columns": 3
      }
    },
    "yAxisMargin": {
      "propertyOrder": 31,
      "title": "Y axis text margin (px)",
      "type": "integer",
      "default": 10,
      "minimum": 0,
      "maximum": 20,
      "options": {
        "grid_columns": 3
      }
    },
    "marginTop": {
      "propertyOrder": 40,
      "type": "integer",
      "default": 40,
      "minimum": 0,
      "maximum": 100,
      "options": {
        "grid_columns": 3
      }
    },
    "marginRight": {
      "propertyOrder": 50,
      "type": "integer",
      "default": 40,
      "minimum": 0,
      "maximum": 100,
      "options": {
        "grid_columns": 3
      }
    },
    "marginBottom": {
      "propertyOrder": 60,
      "type": "integer",
      "default": 5,
      "minimum": 0,
      "maximum": 10,
      "options": {
        "grid_columns": 3
      }
    },
    "marginLeft": {
      "propertyOrder": 70,
      "type": "integer",
      "default": 40,
      "minimum": 0,
      "maximum": 100,
      "options": {
        "grid_columns": 3
      }
    },
    "precipitationBufferUp": {
      "propertyOrder": 75,
      "title": "prec. buffer up, mm",
      "type": "integer",
      "default": 10,
      "minimum": 0,
      "maximum": 1000,
      "options": {
        "grid_columns": 3
      }
    },
    "temperatureBufferUp": {
      "propertyOrder": 76,
      "title": "t buffer up, °C",
      "type": "integer",
      "default": 2,
      "minimum": 0,
      "maximum": 50,
      "options": {
        "grid_columns": 3
      }
    },
    "temperatureBufferDown": {
      "propertyOrder": 77,
      "title": "t buffer down, °C",
      "type": "integer",
      "default": 10,
      "minimum": 0,
      "maximum": 50,
      "options": {
        "grid_columns": 3
      }
    },
    "distanceBars": {
      "propertyOrder": 78,
      "type": "number",
      "default": 0.1,
      "minimum": 0,
      "maximum": 1,
      "options": {
        "grid_columns": 3
      }
    },
    "labelTemperature": {
      "propertyOrder": 90,
      "type": "string",
      "default": "°C"
    },
    "labelPrecipitation": {
      "propertyOrder": 100,
      "type": "string",
      "default": "mm"
    },
    "labelMeanTemperature": {
      "propertyOrder": 110,
      "type": "string",
      "default": "mean t"
    },
    "labelTotalPrecipitation": {
      "propertyOrder": 120,
      "type": "string",
      "default": "precipitation"
    },
    "labelAplitudeTemperature": {
      "propertyOrder": 130,
      "type": "string",
      "default": "t amplitude"
    },
    "precipitationColor": {
      "propertyOrder": 131,
      "type": "string",
      "format": "color",
      "default": "#4682B4",
      "options": {
        "grid_columns": 6
      }
    },
    "tempColor": {
      "propertyOrder": 131,
      "type": "string",
      "format": "color",
      "default": "#ff0000",
      "options": {
        "grid_columns": 6
      }
    },
    "whiteBackground": {
      "propertyOrder": 140,
      "type": "boolean",
      "default": true,
      "required": true
    },
    "saveImageAs": {
      "propertyOrder": 150,
      "type": "select",
      "default": "SVG",
      "enum": ["SVG", "PNG"],
      "required": true
    },
    "monthLabels": {
      "propertyOrder": 160,
      "title": "Month Labels",
      "type": "select",
      "enum": ["Roman (I-XII)", "BG Letters (Я-Д)", "BG Abbr (яну-дек)", "Latin Letters (J-D)", "Latin Abbr (Jan-Dec)"],
      "required": true,
      "default": "Roman (I-XII)"
    }
   }
}
